<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.newmediaworks</groupId><artifactId>nmw-oss-parent</artifactId><version>1.21.0<!-- -POST-SNAPSHOT --></version>
    <relativePath>../parent/pom.xml</relativePath>
  </parent>

  <groupId>com.newmediaworks</groupId><artifactId>nmw-javadoc-resources</artifactId><version>1.1.0</version>
  <packaging>jar</packaging>

  <properties>
    <!-- Must be set to ${git.commit.time} for snapshots or ISO 8601 timestamp for releases. -->
    <project.build.outputTimestamp>2023-09-25T02:12:22Z</project.build.outputTimestamp>
    <module.name>com.newmediaworks.javadoc.resources</module.name>
    <!-- Java 11 inherited from parent -->
    <!-- Matches "requireJavaVersion" from ao-oss-parent -->
  </properties>

  <name>NMW Javadoc Resources</name>
  <url>https://oss.newmediaworks.com/javadoc-resources/</url>
  <description>Javadoc resources for NMW-branded projects.</description>
  <inceptionYear>2019</inceptionYear>

  <licenses>
    <license>
      <name>GNU General Lesser Public License (LGPL) version 3.0</name>
      <url>https://www.gnu.org/licenses/lgpl-3.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <organization>
    <name>New Media Works</name>
    <url>https://www.newmediaworks.com/</url>
  </organization>

  <developers>
    <developer>
      <name>AO Industries, Inc.</name>
      <email>support@aoindustries.com</email>
      <url>https://aoindustries.com/</url>
      <organization>AO Industries, Inc.</organization>
      <organizationUrl>https://aoindustries.com/</organizationUrl>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:git://github.com/newmediaworks/nmw-javadoc-resources.git</connection>
    <developerConnection>scm:git:git@github.com:newmediaworks/nmw-javadoc-resources.git</developerConnection>
    <url>https://github.com/newmediaworks/nmw-javadoc-resources</url>
    <tag>nmw-javadoc-resources-1.1.0</tag>
  </scm>

  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/newmediaworks/nmw-javadoc-resources/issues</url>
  </issueManagement>

  <ciManagement>
    <system>Jenkins</system>
    <url>https://jenkins.aoindustries.com/job/nmw/job/oss/job/javadoc-resources/</url>
  </ciManagement>
  <!-- Only one allowed in POM:
  <ciManagement>
    <system>GitHub Actions</system>
    <url>https://github.com/newmediaworks/nmw-javadoc-resources/actions</url>
  </ciManagement>
  -->

  <repositories>
    <!-- Repository required here, too, so can find parent -->
    <repository>
      <id>sonatype-nexus-snapshots</id>
      <name>Sonatype Nexus Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
    </repository>
  </repositories>

  <build>
    <!--
      module-info.java moved to src/main/java-11, since chicken-and-egg issue activated in parent when
      src/main/java is present.  The parent adds nmw-javadoc-offline as a plugin dependency.  This, in-turn,
      will attempt to fetch the dependency, not using this version from the reactor build.  This may cause the
      build to fail when switching to a new version of nmw-javadoc-offline.
    -->
    <sourceDirectory>src/main/java-11</sourceDirectory>
  </build>
</project>
